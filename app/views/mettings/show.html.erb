<% if notice.present? %>
  <div class="alert alert-dismissible alert-success">
    <%= notice %>
  </div>
<% end %>

<hr class="my-4">
<h1 class="display-3"><%= @metting.name.titleize %></h1>
<h6><%= gtm_time(@metting.date) %></h6>
<hr class="my-4">

<table class="table table-hover">
  <thead>
  </thead>
  <tbody>
  <% if @users.any? %>
    <% @users.each_with_index do |user, index| %>
      <tr class=<%= zebra_table(index) %>>
        <td><%= user.username %></td>
        <td><%= user.fullname %></td>
        <td>
          <%= link_to 'Report', report_user_path(user, format: 'csv') %> |
          <%= link_to 'Edit', edit_user_path(user) %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <div class="alert alert-dismissible alert-primary">
      <strong>Oh snap!</strong> No users created yet...
    </div>
  <% end %>
  </tbody>
</table>

<%= link_to 'Back', mettings_path, class: 'btn btn-default ', role: 'button' %>
